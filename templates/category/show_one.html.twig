{% extends 'base.html.twig' %}
{% block title %}Une cat√©gorie{% endblock %}

{% block body %}
	<section class="trick">
		<h2 class="metadata" style="margin: 30px;">
			{{ category.name }}
		</h2>
		<div class="content">
			<p>{{ category.description }}</p>
		</div>
	</section>
{# {% dump(category.slug) %} #}
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('category_edit', {'slug':category.slug}) }}" class="btn btn-warning">
			<i class="fas fa-edit"></i>
		</a>
		<a href="{{ path('category_delete', {'slug':category.slug}) }}" class="btn btn-danger">
			<i class="fas fa-trash-alt"></i>
		</a>
	{% endif %}

{% endblock %}
