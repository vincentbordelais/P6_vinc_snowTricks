{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block title %}Inscription
{% endblock %}

{% block body %}
	<h1>Inscription</h1>
	<div class="" style="max-width: 500px;">
		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.last_name, {'attr' : {'placeholder' : "Pr√©nom" }}) }}
		{{ form_row(registrationForm.first_name, {'attr' : {'placeholder' : "Nom" }}) }}
		{{ form_row(registrationForm.username, {'attr' : {'placeholder' : "Pseudonyme" }}) }}
		{{ form_row(registrationForm.picture, {'attr' : {'placeholder' : "Image" }}) }}
		{{ form_row(registrationForm.email, {'attr' : {'placeholder' : "Email" }}) }}
