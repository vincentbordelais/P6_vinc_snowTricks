{% if pages > 1 %}
	<nav>
		<ul class="pagination">
			{% if currentPage > 1 %}
				<li class="page-item">
					<a href="{{ path(path, {page: currentPage - 1}) }}" class="page-link">&lt;</a>
					{# &lt; étant flèche vers la gauche #}
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&lt;</a>
				</li>
			{% endif %}

			{% for page in 1..pages %}
				<li class="page-item {{ page == currentPage ? 'active' : '' }}">
					<a href="{{ path(path, {page: currentPage}) }}" class="page-link">{{ page }}</a>
				</li>
			{% endfor %}
			{% if currentPage < tricks.totalOfPages %}
				<li class="page-item">
					<a href="{{ path(path, {page: currentPage + 1}) }}" class="page-link">&gt;</a>
					{# &lt; étant flèche vers la gauche #}
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&gt;</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
