{% if totalOfPages is defined and totalOfPages > 1 %}
	<nav>
		<ul class="pagination">
			{% if currentPage > 1 %}
				<li class="page-item">
					{# Page précédente #}
					<a href="{{ path(path, param1) }}" class="page-link">&lt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&lt;</a>
				</li>
			{% endif %}

			{% for page in 1..totalOfPages %}
				<li class="page-item {{ page == currentPage ? 'active' : '' }}">
					<a href="{{ path(path, param2) }}" class="page-link">{{ page }}</a>
				</li>
			{% endfor %}

			{% if currentPage < totalOfPages %}
				<li class="page-item">
					{# Page suivante #}
					<a href="{{ path(path, param3) }}" class="page-link">&gt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&gt;</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
